<div class="container">
  <div class="w3-margin-top w3-border w3-border-black w3-round-large">
      <h4 class="center w3-text-black w3-margin">Suggestion List</h4>
    <% if @suggestions.present? %>
      <% @suggestions.each do |suggestion| %>
        <div class="section w3-margin  w3-round-xlarge orange lighten-4">
          <%= link_to suggestion, class: "w3-hover-none" do %>
            <p class="flow-text">
              <i class="material-icons red-text">
                view_list
              </i>
              <span class="black-textt hove">
               <%= suggestion.title %>
            </span>

            </p>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <h5 class="center w3-margin red darken-4 white-text">No Suggestions found!</h5>
    <% end %>
  </div>

</div>











<p id="notice"><%= notice %></p>



<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Suggestion</th>
    <th>Active status</th>
    <th>Del status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @suggestions.each do |suggestion| %>
    <tr>
      <td><%= suggestion.title %></td>
      <td><%= suggestion.suggestion %></td>
      <td><%= suggestion.active_status %></td>
      <td><%= suggestion.del_status %></td>
      <td><%= link_to 'Show', suggestion %></td>
      <td><%= link_to 'Edit', edit_suggestion_path(suggestion) %></td>
      <td><%= link_to 'Destroy', suggestion, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Suggestion', new_suggestion_path %>
