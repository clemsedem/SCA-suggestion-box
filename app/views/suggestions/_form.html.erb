<%= simple_form_for @suggestion, remote: true do |f| %>
  <div class="container">
    <div class="row">
      <div class="input-field col s12">
        <%= f.input :title, label: false, placeholder: "Title" %>
        <%#= f.label :title, "Title" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_area :suggestion,
                        class: "materialize-textarea",
                        id: "suggestion",
                        placeholder: "Type your suggestion here",
                        rows: '5'
        %>
        <%#= f.label :suggestion, "Suggestion" %>
      </div>
    </div>
    <div class="row">
      <%= f.button :submit, value: "Submit", class: "right", disable_with: "Please wait..." %>
    </div>


  </div>
<% end %>
